		<collision>
			<geometry>
				<cylinder radius="0.052" length = '0.072'/>
			</geometry>
		</collision>
	</link>
	<link name="wheel_center">
		<visual>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
			<geometry>
				<cylinder radius="0.15" length = '0.05'/>
			</geometry>
		</visual>
		<collision>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
			<geometry>
				<cylinder radius="0.15" length = '0.05'/>
			</geometry>
		</collision>
	</link>
	<xacro:macro name="xacro_name" params="side reflect">
		<link name="wheel_${side}">
			<visual>
				<geometry>
					<cylinder radius="0.2" length = '0.05'/>
				</geometry>
			</visual>
			<collision>
				<geometry>
					<cylinder radius="0.2" length = '0.05'/>
				</geometry>
			</collision>
		</link>
		<joint name = 'base_wheel_${side}_joint' type ="continuous">
			<parent link = 'base'/>
			<child link='wheel_${side}'/>
			<origin xyz="-0.1 ${reflect*0.4} 0.0" rpy="-${pi/2} 0.0 0.0"/>
			<axis xyz = '0 0 1'/>
			<limit effort='30' velocity='5'/>
		</joint>
	</xacro:macro>
	<joint name = 'base_laser_vert_bottom_joint' type = "fixed">
		<parent link = 'base'/>
		<child link='laser_vert_bottom'/>
