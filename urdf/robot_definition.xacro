		<collision>
			<geometry>
				<box size="0.062 0.062 0.087"/>
			</geometry>
		</collision>
	</link>
	<link name="laser_vert_top_right">
		<visual>
			<geometry>
				<box size="0.062 0.062 0.087"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<box size="0.062 0.062 0.087"/>
			</geometry>
		</collision>
	</link>
	<link name="laser_vert_top_left">
		<visual>
			<geometry>
				<box size="0.062 0.062 0.087"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<box size="0.062 0.062 0.087"/>
			</geometry>
		</collision>
	</link>
	<link name="laser_horiz">
		<visual>
			<geometry>
				<cylinder radius="0.052" length = '0.072'/>
			</geometry>
